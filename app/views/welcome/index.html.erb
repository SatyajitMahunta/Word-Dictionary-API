
        <% if Current.user %>
           <%= button_to 'Generate Key', apis_path, class:"mb-3 mt-3 btn btn-success" %>
            
           <table class="table">
                <thead class="thead-dark">
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">API key</th>
                    <th scope="col">Usage</th>
                    </tr>
                </thead>
                <tbody>
                <% x = 1 %>
                <% Api.all.each do |data| %>
                    <tr>
                    <th scope="row"><%= x %></th>
                        <td><%= data.apikey %></td>
                        <td><%= data.count %></td>
                        <td><a data-confirm="Are you sure?" class="btn btn-primary " data-method="delete" href="/apis/del/<%=data.id%>">Delete</a></td>
                    </tr>
                    <% x = x + 1 %>
                <% end %>    
                </tbody>
            </table>
        <%else%>
            <div class = "d-flex align-items-center justify-content-center">
                <h2>Welcome to Word Dictionary API</h2>
            </div>
        <%end%>    

